<Window x:Class="_481kiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_481kiosk"
        mc:Ignorable="d"
        Title="Calgary Information Kiosk" Height="350" Width="525" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="310" VerticalAlignment="Top" Width="507">
            <TabItem x:Name="tabLanguage" Header="Language">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="labelSelectLanguage" Content="Welcome To" HorizontalAlignment="Left" Margin="126,10,0,0" VerticalAlignment="Top" Height="auto" Width="auto" FontSize="21.333"/>
                    <Label x:Name="labelCalgary" Content="Calgary" HorizontalAlignment="Left" Margin="202,25,0,0" VerticalAlignment="Top" FontFamily="Mistral" FontSize="53.333" Height="auto" Width="auto"/>
                    <Button x:Name="btnEnglish" Content="English" HorizontalAlignment="Left" Margin="46,116,0,0" VerticalAlignment="Top" Width="83" Height="52" FontSize="14.667"/>
                    <Button x:Name="btnFrench" Content="Français" HorizontalAlignment="Left" Margin="148,116,0,0" VerticalAlignment="Top" Width="83" Height="52" FontSize="14.667"/>
                    <Button x:Name="btnSpanish" Content="Español" HorizontalAlignment="Left" Margin="249,116,0,0" VerticalAlignment="Top" Width="82" Height="52" FontSize="14.667"/>
                    <Button x:Name="btnChinese" Content="中国" HorizontalAlignment="Left" Margin="353,116,0,0" VerticalAlignment="Top" Width="84" Height="52" FontSize="14.667"/>
                    <Button x:Name="btnHindi" Content="हिंदी" HorizontalAlignment="Left" Margin="46,193,0,0" VerticalAlignment="Top" Width="83" Height="52" FontSize="14.667"/>
                    <Button x:Name="btnArabic" Content="العربية" HorizontalAlignment="Left" Margin="148,193,0,0" VerticalAlignment="Top" Width="83" Height="52" FontSize="14.667"/>
                    <Button x:Name="btnRussian" Content="Русский" HorizontalAlignment="Left" Margin="249,193,0,0" VerticalAlignment="Top" Width="82" Height="52" FontSize="14.667"/>
                    <Button x:Name="btnJapanese" Content="日本語" HorizontalAlignment="Left" Margin="353,193,0,0" VerticalAlignment="Top" Width="84" Height="52" FontSize="14.667"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
